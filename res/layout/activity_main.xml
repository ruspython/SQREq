<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg"
    
    >

    <LinearLayout
        android:id="@+id/linlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <EditText
                android:id="@+id/a"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="1"
                android:inputType="phone" 
                android:editable="false">

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="xÂ² +"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/b"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="0"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x+"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/c"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="0"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="= 0"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="0.75"
                android:text="Calculate"
                android:background="@drawable/states_shapes"
                android:layout_margin="5dp"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:text="C"
                    android:id="@+id/del"
                    android:layout_weight="2"
                    style="@style/button"
                    android:layout_margin="5dp"/>

        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >
             <TableLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 

                 <TableRow
                     android:id="@+id/tableRow2"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent" >

                     
                     <Button
		                android:id="@+id/btn7"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="7"
                        android:background="@drawable/numeral"
                        android:layout_margin="5dp"/>
                                          
                     <Button
		                android:id="@+id/btn8"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="8"
                        android:background="@drawable/numeral"
                        android:layout_margin="5dp"/>
     
                     <Button
		                android:id="@+id/btn9"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="9" android:layout_column="3"
                        android:background="@drawable/numeral"
                        android:layout_margin="5dp"/>
                     
                     
                 </TableRow>

                 <TableRow
                     android:id="@+id/tableRow3"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent" >
                     
                     <Button
		                android:id="@+id/btn4"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="4"
                        android:background="@drawable/numeral"
                        android:layout_margin="5dp"/>
                     
                     <Button
		                android:id="@+id/btn5"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="5"
                        android:background="@drawable/numeral"
                        android:layout_margin="5dp"/>
                     
                     <Button
		                android:id="@+id/btn6"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="6" android:layout_column="3"
                        android:background="@drawable/numeral"
                        android:layout_margin="5dp"/>
                     
                 </TableRow>

                 <TableRow
                     android:id="@+id/tableRow4"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent" >
                     
                     <Button
		                android:id="@+id/btn1"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="1"
                        android:background="@drawable/numeral"
                        android:layout_margin="5dp"/>
                     
                     <Button
		                android:id="@+id/btn2"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="2"
                        android:background="@drawable/numeral"
                        android:layout_margin="5dp"/>
                     
                     <Button
		                android:id="@+id/btn3"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="3" android:layout_column="3"
                        android:background="@drawable/numeral"
                        android:layout_margin="5dp"/>
                     
                 </TableRow>
                 
                 <TableRow
                     android:id="@+id/tableRow1"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent" >

                     <Button
		                android:id="@+id/dotBtn"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="."
                        android:background="@drawable/other_buttons"
                        android:layout_margin="5dp"/>


                     <Button
                         android:id="@+id/btn0"
                         android:layout_width="wrap_content"
                         android:layout_height="45dp"
                         android:layout_weight="1"
                         android:text="0"
                         android:layout_column="1"
                         android:background="@drawable/numeral"
                         android:layout_margin="5dp"/>
                     <Button
		                android:id="@+id/minusBtn"
		                android:layout_width="wrap_content"
		                android:layout_height="45dp"
		                android:layout_weight="1"
		                android:text="-"
                        android:layout_column="3"
                        android:background="@drawable/other_buttons"
                        android:layout_margin="5dp"/>
                     
                 </TableRow>
             </TableLayout>
             <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent">
                 <Button
                         style="@style/button"
                         android:layout_width="fill_parent"
                         android:layout_height="45dp"
                         android:text="left"
                         android:id="@+id/left"
                         android:layout_weight="1"
                         android:layout_marginRight="10dp"/>
                 <Button
                         style="@style/button"
                         android:layout_width="fill_parent"
                         android:layout_height="45dp"
                         android:text="right"
                         android:id="@+id/right"
                         android:layout_weight="1"
                         android:layout_marginLeft="10dp"
                         />

             </LinearLayout>

         </LinearLayout>
    </LinearLayout>

</RelativeLayout>
